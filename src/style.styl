/*
 * Movie Item
 */

span[class=intersection-visible-wrapper] {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0px;
    height: 100vh;
}

.failed {
  padding-top: 10vh;
  padding-bottom: 5vh;
  background: linear-gradient(black, red, transparent);
}

.container {
    position: relative;
    display: flex;
    flex-wrap: wrap
    justify-content: space-evenly
    align-items: space-evenly
    justify-items: center;
    margin: 32px;
    padding-top: 2vw;
}

.card {
    display: flex;
    flex-direction: column;
    width: 15rem;
    height: 15rem;
    margin: 0;
    cursor: pointer;
    text-align: left;
    padding: 0 1vw;

    .thumb {
        position: relative;
        flex: 1;
        display: flex;

        box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.5);
        background-color: rgba(100, 100, 100, 0.75);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        border-radius: 8px;
    }

    &:hover .thumb {
        box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.6);
    }

    &:hover .itemTitle {
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }

    &:hover .overlay,
    &:hover .playIcon,
    &:hover .stars,
    &:hover .favIcon {
        opacity: 1;
    }
}

.itemTitle {
    font-size: 15px;
    font-weight: bold;
    letter-spacing: 1px;
    line-height: 17px;
    color: #FFFFFF;
    margin: 24px 0 0 0;
    height: 2em;
}

.hoverContainer {
    display: block;
    height: 1em;
    position: relative;
    padding-bottom: 3vh;
}

.itemYear, .stars {
    position: absolute;
    top: 0px;
    left: 0px;
    line-height: 15px;
    transition: opacity .3s ease-in-out;
}

.stars {
    font-size: 18px;
    opacity: 0;
}

.itemYear {
    font-size: 12px;
    color: #687687;
    opacity: 1;
}

/*
 * Card Hover
 */

.overlay {
    display: flex;
    width: 100%;
    position: relative;
    overflow: hidden;
    margin: 0;
    border-radius: 8px;
    background-image: linear-gradient(-139deg, rgba(255, 23, 218, 0.60) 0%, rgba(255, 23, 67, 0.60) 100%);
    opacity: 0;
    transition: all .3s ease-in-out;
}

.playIcon {
    display: table;
    height: auto;
    fill: #FFF;
    width: 7vw;
    z-index: 3;
    margin: auto;
    opacity: 0;
    transition: all .3s ease-in-out;
    text-shadow: 0 0px 8px rgba(0, 0, 0, 0.4);
}

.playIcon:hover {
  transform: scale(2);
}

.favIcon {
    fill: #ffffff;
    font-size: 20px;
    z-index: 3;
    position: absolute;
    bottom: 15px;
    right: -10px;
    opacity: 0;
    transition: all .3s ease-in-out;
    border-radius: 50%;
    padding: 8px;
    box-sizing: border-box;
    width: 35px;
    height: 35px;
    background-color: #607D8B;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.5);

    &:hover {
      transform: scale(1.5);
    }

    &[class*=active], &:hover {
      background: #850000;
      opacity: 0.8;
    }

    &[class*=active]:hover {
      background: #b50000;
      opacity: 1;
    }
}

.card:hover .itemYear {
    opacity: 0;
}


/*
 * Card Loading
 */

.card__inner {
    -webkit-animation: shimmer 1s linear infinite forwards;
    animation: shimmer 1s linear infinite forwards;
    background: #3d484e;
    background-image: -webkit-linear-gradient(to right, #3d484e 0%, rgba(25, 28, 40, 0.4) 20%, #3d484e 40%, #3d484e 100%);
    background-image: linear-gradient(to right, #3d484e 0%, rgba(25, 28, 40, 0.4) 20%, #3d484e 40%, #3d484e 100%);
    background-repeat: no-repeat;
    background-size: 400px 258px;
    height: 100%;
    position: relative;
}

.card__inner div {
    background: #191c28;
    height: 6px;
    left: 0;
    position: absolute;
    right: 0;
}

.card__inner div:nth-child(1) {
    height: 15px;
    width: 60%;
    bottom: 0;
    left: auto;
    right: 0px;
}

.card__inner div:nth-child(2) {
    height: 4px;
    width: 100%;
    bottom: 15px;
    left: 0;
}

.card__inner div:nth-child(3) {
    width: 25%;
    height: 20px;
    bottom: 19px;
    right: 0;
    left: auto;
}

.card__inner div:nth-child(4) {
    height: 6px;
    width: 100%;
    bottom: 33px;
    left: 0;
}

@-webkit-keyframes shimmer {
    0% {
        background-position: -368px 0;
    }
    100% {
        background-position: 368px 0;
    }
}

@keyframes shimmer {
    0% {
        background-position: -368px 0;
    }
    100% {
        background-position: 368px 0;
    }
}
